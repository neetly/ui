{
  "name": "@neetly/design",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "homepage": "https://github.com/neetly/design",
  "repository": {
    "type": "git",
    "url": "git@github.com:neetly/design.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "start": "yarn workspace @neetly/design-website start",
    "build": "yarn workspaces foreach --verbose run build",
    "clean": "yarn workspaces foreach --verbose run clean",
    "lint": "eslint --max-warnings 0 . && prettier --check .",
    "lint:fix": "eslint --max-warnings 0 --fix . && prettier --write .",
    "publish": "yarn workspaces foreach --verbose --no-private npm publish --tolerate-republish"
  },
  "devDependencies": {
    "@buncho/eslint-config": "^5.1.0",
    "@buncho/tsconfig": "^2.0.0",
    "@prettier/plugin-xml": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.14.0",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3"
  },
  "packageManager": "yarn@3.2.0"
}
