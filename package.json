{
  "name": "@neetly/design-system",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "homepage": "https://github.com/neetly/design-system",
  "repository": {
    "type": "git",
    "url": "git@github.com:neetly/design-system.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "start": "yarn workspace @neetly/design-system-website start",
