{
  "extends": "@buncho/tsconfig",

  "include": ["./src"],

  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./lib",

    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["@buncho/builder", "react/next", "react-dom/next"],

    "plugins": [{ "name": "typescript-plugin-css-modules" }],

    // Make typescript-plugin-css-modules happy
    "baseUrl": ".",
    "paths": {
      "@neetly/palette": ["../palette/src/index.scss"]
    }
  },

  "references": [{ "path": "../palette" }, { "path": "../icons" }]
}
